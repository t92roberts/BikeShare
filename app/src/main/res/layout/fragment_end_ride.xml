<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Last ride ended -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingRight="5dp"
            android:text="@string/last_ended" />

        <TextView
            android:id="@+id/last_ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Name of the bike -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingRight="5dp"
            android:text="@string/bike_name" />

        <EditText
            android:id="@+id/text_bike_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_text_here" />
    </LinearLayout>

    <!-- Where the ride is ending -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingRight="5dp"
            android:text="@string/where"/>

        <EditText
            android:id="@+id/text_end_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_text_here"/>

    </LinearLayout>

    <!-- Button to end the ride -->
    <Button
        android:id="@+id/button_end_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/end_ride" />

</LinearLayout>